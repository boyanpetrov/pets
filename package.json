{
  "name": "peta",
  "version": "0.1.1",
  "description": "Wow Pets Battles",
  "private": true,
  "scripts": {
    "build-client": "npm run build-client --prefix client",
    "start": "npm run build-client && npm run pg-migrate-up && node server/server.js",
    "dev": ". ./env-dev.sh && nodemon server/server.js",
    "test": ". ./env-dev.sh && npm run pg-refresh:dev && npm run unit && npm run integration",
    "test:ci": ". ./env-ci.sh && npm run unit && npm run integration",
    "integration": "npm run pg-migrate-up && mocha \"test/integration/test.js\"",
    "unit": "mocha \"test/unit/test.js\"",
    "pg-migrate-up": "./node_modules/.bin/node-pg-migrate up",
    "pg-migrate-down": "./node_modules/.bin/node-pg-migrate down",
    "pg-migrate-create": "./node_modules/.bin/node-pg-migrate create",
    "pg-migrate-up:dev": ". ./env-dev.sh && npm run pg-migrate-up",
    "pg-migrate-down:dev": ". ./env-dev.sh && npm run pg-migrate-down",
    "pg-migrate-create:dev": " . ./env-dev.sh && npm run pg-migrate-create",
    "pg-up:dev": "docker-compose up -d",
    "pg-down:dev": "docker-compose down",
    "pg-refresh:dev": "npm run pg-down:dev && npm run pg-up:dev && sleep 5 "
  },
  "author": "Boyan Petrov & Simon Tweed",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.17.1",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "lodash": "^4.17.5",
    "mocha": "^5.0.1",
    "node-cron": "^1.2.1",
    "node-pg-migrate": "^2.21.0",
    "nodemon": "^1.17.5",
    "passport": "^0.4.0",
    "passport-bnet": "^1.2.1",
    "passport-local": "^1.0.0",
    "pg-promise": "^7.5.2",
    "pino": "^4.11.0"
  }
}
